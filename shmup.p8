--player

function player_move()
	cls(0)
	spr(shipspr,ship_x,ship_y) --ship
	spr(bullspr,bull_x,bull_y) --bullet
	bull=1
	player=40
	accel = 8.75
	bull_y=bull_y-2*4 --bullet speed
	
	--button controls
	 
	shipspr=2 --default spr
	if btn(➡️) then 
	 ship_x+=1 
	 shipspr=3
	 end
	if btn(⬅️) then  
		ship_x-=1 
		shipspr=1
		end
	if btn(⬆️) then  ship_y-=1 end
 if btn(⬇️) then  ship_y+=1 end
	
		--shooting
	if (btnp(4)) then
	bull_y=ship_y-13
	bull_x=ship_x
	sfx(shoot)
	
	--muzzle flash
	muzzle=1
	circfill(ship_x+3,ship_y-3,muzzle,7)
	if muzzle>0 then
		muzzle= muzzle-1
		end
	end
	
	--player collision
	if ship_x>120 then ship_x=120 end
	if ship_x<0 then ship_x=0 end
	
	if ship_y>120 then ship_y=120 end
	if ship_y<0 then ship_y=0 end
	
	--flame sprite
	flamespr=flamespr+1
	spr(flamespr,ship_x,ship_y+8)
	
	if flamespr >37 then
		flamespr=33
		end
end
