function _init() --called once
	cls() --clears screen
	
	ship_x=64	--ship x
	ship_y=64	--ship y
	
	bull_x=64	--bullet x
	bull_y=40	--bullet y
	
	shipspr=2	--ship spr
	flamespr=33 --flame spr
	bullspr=17	--bullet sprite
	
	shoot=0 -- shoot sfx
	
	muzzle=0 --muzzle circ
	
	score=10000 --score value
	
	lives=5
end

