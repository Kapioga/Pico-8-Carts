function _draw()

end

function _update()
	snake_body()
end
-->8
function snake_body()
	cls(1)
	spr(snk, sn_x, sn_y)
	spr(2, sn_x-7, sn_y)
	spr(1, sn_x-14, sn_y)
	sn_x+=1
	
	--collision
	if sn_x>127 then
		sn_x=20
	end
	
	if sn_y>127 then
		sn_y=20
	end
	
end
