--snake

function snake_body()
	cls(13)
	spr(snk, sn_x, sn_y)
	spr(2, sn_x-7, sn_y) --middle
	spr(1, sn_x-14, sn_y)
	sn_x+=1
	
	--collision
	if sn_x>127 then
		sn_x=20
	end
	
	if sn_y>127 then
		sn_y=20
	end
	
end

--control
function snk_move()
	if btn(⬇️) then
		sn_y+=1
		sn_x-=1
		flip(snk)
	end
		if btn(⬆️) then
		sn_y-=1
	end
		if btn(⬅️) then
		sn_x-=1
	end
		if btn(➡️) then
		sn_x+=1
	end
end
-->8
--bait 
function bait()
	spr(17,bait_x, bait_y)
	
	--collision
	while sn_x==bait_x and sn_y==bait_y do
		snk=4
		sfx(1)
		bait_x=flr(rnd(110))+20
		bait_y=flr(rnd(110))+20
	end
	
	if sn_x!=bait_x and sn_y!=bait_y then
		snk=3
	end
end
